{
    "manifest_version": 3,
    "name": "Bisue Utils Extension",
    "version": "1.0.0",
    "description": "A basic Chrome extension built with React and Vite",
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/content.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}